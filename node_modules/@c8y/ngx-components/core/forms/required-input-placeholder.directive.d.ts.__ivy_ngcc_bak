    private placeholder;
    private req;
    constructor(el: ElementRef, renderer: Renderer2, translationService: TranslateService, ngControl: NgControl);
    ngAfterViewChecked(): void;
    private getTextForPlaceholder;
    private updatePlaceholder;
}
